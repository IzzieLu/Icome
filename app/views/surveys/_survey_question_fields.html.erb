<fieldset>
  <%= f.label :question_content, "Question" %><br />
  <%= f.text_area :question_content %><br />
  <%= f.hidden_field :_destroy %>
  <%= link_to "Remove Question", '#', class: "remove_fields" %>

  <%= f.fields_for :question_answers do |builder| %>
    <%= render 'question_answer_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Answer", f, :question_answers %>
</fieldset>