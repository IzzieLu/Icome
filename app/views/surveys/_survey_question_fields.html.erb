<fieldset>
  <%= f.label :question_content, "Question" %>
  <br />
  <%= f.label :content_type, "Question type: " %>
  <%= f.collection_select :content_type, Question::CONTENT_TYPE, :to_s, :to_s
  %>
  <%= f.label :is_required %>
  <%= f.check_box :is_required %><br />
  <%= f.text_area :question_content %>
  <%= link_to "Remove Question", '#', class: "remove_fields" %><br />
  <% unless ["new","create"].include? controller.action_name %>
    <%= f.label :display_squence %>
    <%= f.number_field :display_squence %><br />
  <% end  %>
  <%= f.hidden_field :_destroy %>
  <br />

  <%= f.fields_for :question_answers do |builder| %>
    <%= render 'question_answer_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Answer", f, :question_answers %>
</fieldset>