<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">

    <%= f.label :survey_name %><br>
    <%= f.text_field :survey_name %><br>
    <%= f.label :survey_desciption %><br>
    <%= f.text_area :survey_desciption %><br>
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher %><br>
    <%= f.label :pubdatedate %><br>
    <%= f.datetime_select :pubdate %>
  </div>

  <%= f.fields_for :survey_questions do |builder| %>
    <%= render "survey_question_fields", :f => builder %>
  <% end %>

  <%= link_to_add_fields "Add Question", f, :survey_questions %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
