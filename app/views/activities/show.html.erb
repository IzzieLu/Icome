            <img src="/srcImg/activity.jpg" alt="">
            <div class="brand">
              <div class="name">image</div>
            </div>
          </div>
      </div>
      <%=button_to_join controller.controller_name,params[:id]%>
      <%=button_to_select 'join as volunteer', controller.controller_name,'volunteer',params[:id]%>
  </div>
  <%if (@activity.descriptions.present? and @activity.descriptions.length>100) or (@activity.remark.present? and @activity.remark.length>100) then %>
      <%= render 'showlong' %>
      <%else%>
       <%= render 'showlong' %>
  <%end if%>





